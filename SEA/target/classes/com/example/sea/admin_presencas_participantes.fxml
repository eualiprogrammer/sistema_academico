<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="adminPresencasParticipantesRoot"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="content-area">

    <children>
        <VBox fx:id="cardPresencas"
              spacing="4.0"
              AnchorPane.topAnchor="80.0"
              AnchorPane.leftAnchor="80.0"
              AnchorPane.rightAnchor="80.0"
              AnchorPane.bottomAnchor="80.0"
              styleClass="card-teal-large">

            <HBox spacing="8.0">
                <Label text="1. Nome Participante" styleClass="card-text-white"/>
                <CheckBox fx:id="chkPresenca1" styleClass="presence-checkbox"/>
            </HBox>

            <HBox spacing="8.0">
                <Label text="2. Nome Participante" styleClass="card-text-white"/>
                <CheckBox fx:id="chkPresenca2" styleClass="presence-checkbox"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
