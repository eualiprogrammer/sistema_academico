<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="adminCriarEventoRoot"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="content-area">

    <center>
        <VBox alignment="CENTER">
            <VBox fx:id="cardCriarEvento"
                  spacing="16.0"
                  styleClass="form-card-teal">
                <padding>
                    <Insets top="32" right="32" bottom="32" left="32"/>
                </padding>

                <TextField fx:id="eventoNomeField"
                           promptText="NOME"
                           styleClass="form-text-field-white"/>

                <TextField fx:id="eventoDataInicioField"
                           promptText="Data inicio"
                           styleClass="form-text-field-white"/>

                <TextField fx:id="eventoDataFimField"
                           promptText="Data fim"
                           styleClass="form-text-field-white"/>

                <TextField fx:id="eventoDescricaoField"
                           promptText="Descrição"
                           styleClass="form-text-field-white"/>

                <Region VBox.vgrow="ALWAYS"/>

                <Button fx:id="btnConfirmarEvento"
                        text="confirmar"
                        styleClass="btn-form-confirm-white"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
