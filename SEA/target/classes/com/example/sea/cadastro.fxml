<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="cadastroRoot"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.seuprojeto.controller.CadastroController"
            prefWidth="1280.0" prefHeight="720.0"
            stylesheets="@styles.css"
            styleClass="app-background">

    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="cadastroCard"
                      styleClass="form-card"
                      spacing="16.0">
                    <padding>
                        <Insets top="32" right="32" bottom="32" left="32"/>
                    </padding>

                    <TextField fx:id="nomeField"
                               promptText="NOME"
                               styleClass="form-text-field"/>

                    <HBox spacing="16.0">
                        <TextField fx:id="cpfField"
                                   promptText="CPF"
                                   styleClass="form-text-field-small"
                                   HBox.hgrow="ALWAYS"/>

                        <TextField fx:id="emailField"
                                   promptText="email"
                                   styleClass="form-text-field-small"
                                   HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <Region VBox.vgrow="ALWAYS"/>

                    <Button fx:id="confirmarCadastroButton"
                            text="confirmar"
                            styleClass="btn-form-confirm"
                            maxWidth="-1.0"/>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
