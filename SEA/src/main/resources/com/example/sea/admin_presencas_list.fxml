<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" styleClass="content-area" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaListarPresencasController">

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label styleClass="titulo" text="Gerenciar Presenças - Selecione a Palestra" />
    </HBox>

    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tabelaPalestras" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="250.0" text="PALESTRA" />
                <TableColumn fx:id="colPalestrante" prefWidth="200.0" text="PALESTRANTE" />
                <TableColumn fx:id="colSala" prefWidth="150.0" text="SALA" />
                <TableColumn fx:id="colData" prefWidth="150.0" text="DATA/HORA" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
           <Button onAction="#voltar" prefHeight="34.0" prefWidth="97.0" styleClass="btn-card-yellow" text="← Voltar">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Button>
            <Button onAction="#gerenciarParticipantes" styleClass="btn-acao" text="FAZER CHAMADA / GERENCIAR" />
        </HBox>
    </VBox>
</VBox>
