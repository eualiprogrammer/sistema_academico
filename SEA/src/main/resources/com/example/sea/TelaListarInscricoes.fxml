<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaListarInscricoesController">

    <HBox alignment="CENTER_LEFT">
        <Label styleClass="titulo" text="Gestão de Inscrições" />
        <HBox HBox.hgrow="ALWAYS" /> <Button onAction="#novaInscricao" styleClass="btn-acao" text="+ NOVA INSCRIÇÃO" />
    </HBox>

    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tabelaInscricoes" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colParticipante" prefWidth="250" text="PARTICIPANTE" />
                <TableColumn fx:id="colPalestra" prefWidth="250" text="PALESTRA" />
                <TableColumn fx:id="colConfirmacao" prefWidth="200" text="CONFIRMAÇÃO" />
                <TableColumn fx:id="colDataHoraInscricao" prefWidth="150" text="HORÁRIO DA INSCRIÇÃO" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
         <Button onAction="#voltar" styleClass="btn-card-yellow" text="VOLTAR">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin>
         </Button>
            <Button onAction="#editar" styleClass="btn-acao" text="EDITAR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
            <Button onAction="#excluir" styleClass="btn-perigo" text="EXCLUIR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
        </HBox>
    </VBox>
</VBox>
