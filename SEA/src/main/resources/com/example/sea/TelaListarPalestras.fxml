<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaListarPalestrasController">

    <HBox alignment="CENTER_LEFT">
        <Label styleClass="titulo" text="Gestão de Palestras" />
        <HBox HBox.hgrow="ALWAYS" /> <Button onAction="#novaPalestra" styleClass="btn-acao" text="+ NOVA PALESTRA" />
    </HBox>

    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tabelaPalestras" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="200.0" text="NOME" />
                <TableColumn fx:id="colPalestrante" prefWidth="200.0" text="PALESTRANTE" />
                <TableColumn fx:id="colSala" prefWidth="200" text="SALA" />
                <TableColumn fx:id="colDescricao" prefWidth="150" text="DESCRICAO" />
            <TableColumn fx:id="colDuracaoHoras" prefWidth="150" text="DURAÇÃO HORAS" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
         <Button onAction="#voltar" styleClass="btn-perigo" text="VOLTAR">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin>
         </Button>
            <Button onAction="#editar" style="-fx-background-color: #7b63b3;" styleClass="btn-acao" text="EDITAR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
            <Button onAction="#excluir" styleClass="btn-perigo" text="EXCLUIR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" right="10.0" />
            </HBox.margin></Button>
        </HBox>
    </VBox>
</VBox>
