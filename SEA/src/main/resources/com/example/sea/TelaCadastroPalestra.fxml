<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="587.0" prefWidth="408.0" stylesheets="@CSS/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaCadastroPalestraController">

    <VBox maxWidth="600" spacing="20" styleClass="card">
        <Label styleClass="titulo" text="Cadastrar Palestra">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Label>

        <VBox spacing="5">
            <Label text="Nome Completo">
            <VBox.margin>
               <Insets left="10.0" />
            </VBox.margin></Label>
            <TextField fx:id="txtNome" prefHeight="40">
            <VBox.margin>
               <Insets left="10.0" right="10.0" />
            </VBox.margin></TextField>
        </VBox>

        <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Sala">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></Label>
            <ChoiceBox fx:id="cbSala" prefWidth="150.0" styleClass="btn-card-yellow" stylesheets="@CSS/styles.css">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </ChoiceBox>
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Evento">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></Label>
            <ChoiceBox fx:id="cbEvento" prefWidth="150.0" styleClass="btn-card-yellow">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </ChoiceBox>
            </VBox>
        </HBox>
        <HBox spacing="20">
            <VBox prefHeight="60.0" prefWidth="0.0" spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Data Inicio">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <DatePicker fx:id="dpDataInicio" prefHeight="38.0" prefWidth="174.0" styleClass="btn-card-yellow">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </DatePicker>
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Duração Horas">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="txtDuracaoHoras" prefHeight="40" prefWidth="15.0">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </TextField>
            </VBox>
        </HBox>
        <HBox spacing="20">
            <VBox prefHeight="74.0" prefWidth="330.0" spacing="5">
                <Label text="Hora Inicio">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="txtHora">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </TextField>
            </VBox>
            <VBox prefHeight="74.0" prefWidth="330.0" spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Palestrante">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <ChoiceBox fx:id="cbPalestrante" prefHeight="25.0" prefWidth="169.0" styleClass="btn-card-yellow">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </ChoiceBox>
            </VBox>
        </HBox>
    </VBox>
    <VBox prefHeight="115.0" prefWidth="408.0" spacing="5">
        <Label text="Descrição">
           <VBox.margin>
               <Insets left="10.0" />
           </VBox.margin>
        </Label>
        <TextArea fx:id="txtDescricao" prefHeight="88.0" prefWidth="388.0" styleClass="text-area">
           <VBox.margin>
               <Insets left="10.0" right="10.0" />
           </VBox.margin>
        </TextArea>
    </VBox>

        <HBox alignment="CENTER_RIGHT" prefHeight="54.0" prefWidth="408.0" spacing="15" style="-fx-padding: 20 0 0 0;">
         <Button onAction="#cancelar" prefWidth="120" styleClass="btn-perigo" text="CANCELAR" />
         <Button onAction="#salvar" prefWidth="150" styleClass="btn-acao" text="SALVAR">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Button>
     </HBox>
</VBox>
