<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@CSS/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaListarEventosController">


    <HBox alignment="CENTER_LEFT">
        <Label styleClass="titulo" text="Gestão de Eventos" />
        <HBox HBox.hgrow="ALWAYS" /> <Button onAction="#novoEvento" styleClass="btn-acao" text="+ NOVO EVENTO" />
    </HBox>

    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tabelaEventos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="200.0" text="NOME" />
                <TableColumn fx:id="colDescricao" prefWidth="250.0" text="DESCRIÇÃO" />
                <TableColumn fx:id="colAtividades" prefWidth="200.0" text="ATIVIDADES" />
                <TableColumn fx:id="colDataInicio" prefWidth="165.0" text="DATA INICIO" />
                <TableColumn fx:id="colDataFim" prefWidth="165.0" text="DATA FIM" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" prefHeight="10.0" prefWidth="982.0" spacing="10" style="-fx-padding: 10 0 0 0;">
         <Button alignment="TOP_RIGHT" contentDisplay="RIGHT" onAction="#voltar" styleClass="btn-card-yellow" text="VOLTAR">
            <HBox.margin>
               <Insets bottom="10.0" right="20.0" />
            </HBox.margin>
         </Button>
            <Button onAction="#editar" styleClass="btn-acao" text="EDITAR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" right="20.0" />
            </HBox.margin></Button>
            <Button onAction="#excluir" styleClass="btn-perigo" text="EXCLUIR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
        </HBox>
    </VBox>
</VBox>
