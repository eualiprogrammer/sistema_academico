<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="certificadosRoot"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="content-area">

    <children>
        <VBox spacing="24.0"
              AnchorPane.topAnchor="40.0"
              AnchorPane.leftAnchor="40.0"
              AnchorPane.rightAnchor="40.0"
              AnchorPane.bottomAnchor="40.0">

            <VBox fx:id="certificadoCard1"
                  styleClass="card">
                <Label text="Certificado" styleClass="card-title"/>
                <Label text="inscrição:" styleClass="card-text"/>
                <Label text="código de validação:" styleClass="card-text"/>
                <Label text="data de emissão:" styleClass="card-text"/>
                <Label text="carga horária registrada:" styleClass="card-text"/>
            </VBox>

            <VBox fx:id="certificadoCard2"
                  styleClass="card">
                <Label text="Certificado 2" styleClass="card-title"/>
                <Label text="inscrição:" styleClass="card-text"/>
                <Label text="código de validação:" styleClass="card-text"/>
                <Label text="data de emissão:" styleClass="card-text"/>
                <Label text="carga horária registrada:" styleClass="card-text"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
