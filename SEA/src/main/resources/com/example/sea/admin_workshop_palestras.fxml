<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" styleClass="content-area" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaGerenciarPalestrasWorkshopController">

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Button onAction="#voltar" styleClass="btn-card-yellow" text="← Voltar" />
        <VBox>
            <Label style="-fx-text-fill: #94A3B8; -fx-font-size: 14px;" text="Gerenciar Conteúdo do Workshop" />
            <Label fx:id="lblTituloWorkshop" styleClass="titulo" text="Nome do Workshop" />
        </VBox>
    </HBox>

    <HBox spacing="20.0" VBox.vgrow="ALWAYS">

        <VBox spacing="10.0" styleClass="card" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Palestras Incluídas" />

            <TableView fx:id="tabelaPalestrasIncluidas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTitulo" prefWidth="250.0" text="TÍTULO" />
                    <TableColumn fx:id="colPalestrante" prefWidth="150.0" text="PALESTRANTE" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>

            <Button maxWidth="Infinity" onAction="#removerPalestra" styleClass="btn-perigo" text="Remover Selecionada" />
        </VBox>

        <VBox prefWidth="300.0" spacing="15.0" styleClass="card">
            <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Adicionar Palestra" />
            <Label style="-fx-text-fill: #cbd5e1;" text="Selecione uma palestra existente para vincular a este workshop:" wrapText="true" />

            <ChoiceBox fx:id="cbPalestrasDisponiveis" maxWidth="Infinity" styleClass="btn-card-yellow" />

            <Button maxWidth="Infinity" onAction="#adicionarPalestra" styleClass="btn-acao" text="Adicionar ao Workshop " />
        </VBox>

    </HBox>
</VBox>
