<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaCadastroPalestranteController">

    <VBox maxWidth="600" spacing="20" styleClass="card">
        <Label styleClass="titulo" text="Cadastrar Palestrante">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Label>

        <VBox spacing="5">
            <Label text="Nome Completo">
            <VBox.margin>
               <Insets left="10.0" />
            </VBox.margin></Label>
            <TextField fx:id="txtNome" prefHeight="40">
            <VBox.margin>
               <Insets left="10.0" right="10.0" />
            </VBox.margin></TextField>
        </VBox>

        <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Email">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></Label>
                <TextField fx:id="txtEmail" prefHeight="40">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></TextField>
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Telefone" />
                <TextField fx:id="txtTelefone" prefHeight="40">
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin></TextField>
            </VBox>
        </HBox>

        <VBox spacing="5">
            <Label text="Área de Especialização">
            <VBox.margin>
               <Insets left="10.0" />
            </VBox.margin></Label>
            <TextField fx:id="txtEspecializacao" prefHeight="40">
            <VBox.margin>
               <Insets left="10.0" right="10.0" />
            </VBox.margin></TextField>
        </VBox>

        <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="328.0" spacing="15" style="-fx-padding: 20 0 0 0;">
            <Button onAction="#cancelar" prefWidth="120" styleClass="btn-perigo" text="CANCELAR" />
            <Button onAction="#salvar" prefWidth="150" styleClass="btn-acao" text="SALVAR" />
         <VBox.margin>
            <Insets bottom="10.0" right="10.0" />
         </VBox.margin>
        </HBox>
    </VBox>
</VBox>
