<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaListarSalasController">

    <HBox alignment="CENTER_LEFT">
        <Label styleClass="titulo" text="Lista de Salas" />
        <HBox HBox.hgrow="ALWAYS" /> <Button onAction="#novaSala" styleClass="btn-acao" text="+ NOVA SALA" />
    </HBox>

    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tabelaSalas" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="250" text="NOME" />
                <TableColumn fx:id="colCapacidade" prefWidth="250" text="CAPACIDADE" />
            <TableColumn fx:id="colProjetores" prefWidth="250" text="NUMERO PROJETORES" />
            <TableColumn fx:id="colCaixasDeSom" prefWidth="250" text="NUMERO CAIXAS DE SOM" />
            <TableColumn fx:id="colStatus" prefWidth="250" text="STATUS" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
         <Button onAction="#voltar" styleClass="btn-perigo" text="VOLTAR">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin>
         </Button>
            <Button onAction="#editar" style="-fx-background-color: #7b63b3;" styleClass="btn-acao" text="EDITAR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
            <Button onAction="#excluir" styleClass="btn-perigo" text="EXCLUIR SELECIONADO">
            <HBox.margin>
               <Insets bottom="10.0" right="10.0" />
            </HBox.margin></Button>
        </HBox>
    </VBox>
</VBox>
