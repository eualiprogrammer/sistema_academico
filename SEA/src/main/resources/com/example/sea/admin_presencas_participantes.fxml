<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" styleClass="content-area" stylesheets="@CSS/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaPresencasParticipantesController">

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Button onAction="#voltar" styleClass="btn-card-yellow" text="← Voltar" />
        <VBox>
            <Label style="-fx-text-fill: #94A3B8; -fx-font-size: 14px;" text="Lista de Presença" />
            <Label fx:id="lblTituloPalestra" styleClass="titulo" text="Nome da Palestra" />
        </VBox>
    </HBox>

    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tabelaInscritos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colParticipante" prefWidth="400.0" text="NOME DO ALUNO" />
                <TableColumn fx:id="colStatus" prefWidth="200.0" style="-fx-alignment: CENTER;" text="STATUS ATUAL" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 10 0 0 0;">
            <Label style="-fx-text-fill: #94A3B8;" text="Selecione um aluno e clique em confirmar:" />
            <Button onAction="#confirmarPresenca" style="-fx-background-color: #27ae60; -fx-text-fill: white;" styleClass="btn-acao" text="✅ CONFIRMAR PRESENÇA" />
        </HBox>
    </VBox>
</VBox>
