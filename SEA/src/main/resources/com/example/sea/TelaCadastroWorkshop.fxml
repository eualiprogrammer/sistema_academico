<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sea.gui.TelaCadastroWorkshopController">

    <VBox maxWidth="350" spacing="15" styleClass="card">
        <Label styleClass="titulo" text="Cadastrar Workshop">
            <VBox.margin><Insets left="10.0" /></VBox.margin>
        </Label>

        <VBox spacing="5">
            <Label text="Título do Workshop" />
            <TextField fx:id="txtNome" promptText="Ex: Workshop de Robótica" />
        </VBox>

        <VBox spacing="5">
            <Label text="Evento Vinculado" />
            <ChoiceBox fx:id="cbEvento" maxWidth="Infinity" styleClass="btn-card-yellow" />
        </VBox>

        <VBox spacing="5">
            <Label text="Descrição" />
            <TextArea fx:id="txtDescricao" prefHeight="100" promptText="Descreva o objetivo deste workshop..." wrapText="true" />
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 10 0 0 0;">
            <Button onAction="#cancelar" styleClass="btn-perigo" text="CANCELAR" />
            <Button onAction="#salvar" styleClass="btn-acao" text="SALVAR" />
        </HBox>
    </VBox>
</VBox>
