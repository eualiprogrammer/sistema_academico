<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.seuprojeto.admin.AdminSalasListController"
      spacing="24.0">
    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
    </padding>

    <!-- Lista de salas em formato de cards -->
    <children>

        <!-- Card de sala disponível (exemplo) -->
        <VBox fx:id="salaDisponivelCardExemplo"
              styleClass="card-sala-disponivel">
            <children>
                <Label text="Nome da sala"
                       styleClass="card-title-white"/>
                <Label text="capacidade:"
                       styleClass="card-text-white"/>
                <Label text="número de projetores:"
                       styleClass="card-text-white"/>
                <Label text="número de caixas de som:"
                       styleClass="card-text-white"/>
                <Label text="status:"
                       styleClass="card-text-white"/>
            </children>
        </VBox>

        <!-- Card de sala ocupada (exemplo) -->
        <VBox fx:id="salaOcupadaCardExemplo"
              styleClass="card-sala-ocupada">
            <children>
                <Label text="Nome da sala 2"
                       styleClass="card-title-white"/>
                <Label text="capacidade:"
                       styleClass="card-text-white"/>
                <Label text="número de projetores:"
                       styleClass="card-text-white"/>
                <Label text="número de caixas de som:"
                       styleClass="card-text-white"/>
                <Label text="status:"
                       styleClass="card-text-white"/>
            </children>
        </VBox>

    </children>
</VBox>
